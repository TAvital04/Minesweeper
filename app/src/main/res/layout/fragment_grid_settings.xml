<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridSettingsFragment">

    <SeekBar
        android:id="@+id/gridSettingsRowsSeekbar"
        style="@style/NoTicksSeekBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:background="@drawable/seekbar"
        android:max="5"
        android:progress="1"
        android:progressDrawable="@drawable/seekbar_track"
        android:thumb="@drawable/seekbar_thumb"
        android:tickMark="@null"
        app:layout_constraintBottom_toTopOf="@+id/gridSettingsColumnsSeekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/gridSettingsColumnsSeekbar"
        style="@style/NoTicksSeekBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:background="@drawable/seekbar"
        android:max="5"
        android:progress="1"
        android:progressDrawable="@drawable/seekbar_track"
        android:thumb="@drawable/seekbar_thumb"
        android:tickMark="@null"
        app:layout_constraintBottom_toTopOf="@+id/gridSettingsMinesSeekbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridSettingsRowsSeekbar" />

    <SeekBar
        android:id="@+id/gridSettingsMinesSeekbar"
        style="@style/NoTicksSeekBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:background="@drawable/seekbar"
        android:max="3"
        android:progress="1"
        android:progressDrawable="@drawable/seekbar_track"
        android:thumb="@drawable/seekbar_thumb"
        android:tickMark="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridSettingsColumnsSeekbar" />


</androidx.constraintlayout.widget.ConstraintLayout>